#include<iostream>
#include<string>
using namespace std;

class WordCounter{
    string str;
public:
    WordCounter(string s){
        str = s;
    }
    int countWords(){
        int count = 0;
        for(int i = 1; i < str.length(); i++){
            if(str[i] == ' ' && str[i - 1] != ' ')
                count++;
        }
        return count;
    }
};
int main(){
    WordCounter wc(" Chitkara University ");
    cout << "There are " << wc.countWords() << " Words in the string.";
    return 0;
}
